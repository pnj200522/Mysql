insert into teemp
create table t1 (C1 char(5), C2 VARCHAR2(5));

desc t1;

insert into t1 (c1,c2) values ('ABC', 'ABCDEFG');
select * from t1;

select length(c1), length(c2) from t1;
select dump(c1), dump(c2) from t1;
select ascii('AB') from dual;

select c1, c2 from t1
where c1 = 'ABC';

select c1,c2 from t1
where trim(c1) = c2;

create table t2
(c1 number
, c2 number(4,2)
, c3 number(2,4)
, c4 number(4,0)
, c5 number(4,-1));

desc t2;

commit;
insert into t2 (c3) values(0.12);
select * from t2;

delete from t2;

insert into t2 (c2) values(-1.111);
insert into t2 (c3) values(9);
insert into t2 (c4) values(-9999);
insert into t2 (c5) values(-9999);

create table T_DEPT (deptno number(2)
                    , dname varchar2(10)
                    , loc varchar2(10) default 'Seoul');
                    
insert into t_dept(deptno, dname) values (10, 'SLAES');
insert into t_dept values(10, 'ACCOUNT', 'NY');
select * from t_dept; 


drop table t_dept purge;

create table t_dept
(deptno number(2) constraint t_dept_deptno_pk primary key,
dname varchar2(10) constraint t_dept_dname_nn not null,
loc varchar2(10));

commit;
desc t_dept;
insert into t_dept values(10, 'SALES', 'SEOUL');
insert into t_dept values(10, 'ACCOUNT', 'SEOUL');

create table t_emp
(empno number(4) constraint t_emp_empno_pk primary key,
 ename varchar2(10) constraint t_emp_ename_nn not null,
 sal number(10,2) constraint t_emp_sal_ck check(sal > 0),
 hp varchar(11) constraint t_emp_hp_nn not null
                constraint t_emp_hp_uk unique,
 deptno number(2) constraint t_emp_deptno_fk
                  references t_dept(deptno));
                  
desc t_emp;
commit;

create table t_emp2
(empno number(4)  primary key,
 ename varchar2(10)  not null,
 sal number(10,2)  check(sal > 0),
 hp varchar(11)  not null
                 unique,
 deptno number(2) 
                  references t_dept(deptno));
                  
---------제약조건 이름 보기-----------
select constraint_name	      
from user_constraints	      
where table_name = 'T_EMP2';	      

drop table t_dept purge;

desc t_emp2;

create table t_dept
(deptno number(2),
dname varchar2(10),
loc varchar2(10),
constraint t_dept_deptno_pk primary key(deptno),
constraint t_dept_dname_nn check(dname is not null));

select constraint_name
from user_constraints
where table_name = 'T_DEPT';

comment on table t_dept is '부서 테이블';
comment on column t_dept.dname is '부서 이름';

---------코멘트 보기----------
select * from user_tab_comments;
select * from user_col_comments;

create table t_emp
(empno number(4),
 ename varchar2(10),
 sal number(10,2),
 hp varchar(11),
 deptno number(2),
 constraint t_emp_empno_pk primary key(empno),
 constraint t_emp_ename_nn check(ename is not null),
 constraint t_emp_sal_ck check(sal>0),
 constraint t_emp_hp_nn check(hp is not null),
 constraint t_emp_hp_uk unique(hp),
 constraint t_emp_deptno_fk
 foreign key(deptno)
 references t_dept(deptno));
 
 desc t_emp;
 commit;
 insert into t_emp (empno, ename, sal, hp) values(2, 'NAM', -1, 'AAA');
 select * from t_emp;
